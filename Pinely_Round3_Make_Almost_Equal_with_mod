#include <bits/stdc++.h>
using namespace std;
#define ll long long 
#define pb push_back
int main(){
	ll T;
	cin >> T;
	while(T--){
		ll n;
		cin >> n;
		vector<ll> arr;
		for(int i = 0 ; i < n ; i++){
			ll x;
			cin >> x;
			arr.pb(x);
		}
		ll k = 2;
		while(true){
			set<ll> setDistinct;
			for(int i = 0 ; i < n ;i++){
				 setDistinct.insert(arr[i] % k);
			}
			if(setDistinct.size() == 2){
				break;
			}else{
				k *= 2;
			}
		}
		cout<<k << endl;
	}
	
	
	return 0;
}